<core:FragmentDefinition
        xmlns:core="sap.ui.core"
        xmlns:f="sap.ui.layout.form"
        xmlns="sap.m">
    <VBox class="sapUiSmallMargin">
        <f:Form id="FormEdit480_121201"
                editable="true">
            <f:layout>
                <f:ResponsiveGridLayout
                        labelSpanXL="3"
                        labelSpanL="3"
                        labelSpanM="3"
                        labelSpanS="12"
                        adjustLabelSpan="false"
                        emptySpanXL="4"
                        emptySpanL="4"
                        emptySpanM="4"
                        emptySpanS="0"
                        columnsXL="1"
                        columnsL="1"
                        columnsM="1"
                        singleContainerFullSize="true"
                />
            </f:layout>
            <f:formContainers>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement label="{i18n>general.page-title}">
                            <f:fields>
                                <Input value="{apisettings>/graphql/playground/page-title}"
                                       id="playgroundPageTitleEdit"
                                       required="true"
                                       editable="{configuration>/input/isGeneralInputEnabled}"
                                />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>general.theme}">
                            <f:fields>
                                <SegmentedButton selectedKey="{apisettings>/graphql/playground/settings/editor/theme}"
                                                 class="sapUiSmallMarginBottom"
                                                 enabled="{configuration>/input/isGeneralInputEnabled}">
                                    <items>
                                        <!--                                        todo text-->
                                        <SegmentedButtonItem text="light" key="light"/>
                                        <SegmentedButtonItem text="dark" key="dark"/>
                                    </items>
                                </SegmentedButton>
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>
            </f:formContainers>
        </f:Form>
    </VBox>
</core:FragmentDefinition>
