<core:FragmentDefinition
        xmlns:core="sap.ui.core"
        xmlns:f="sap.ui.layout.form"
        xmlns="sap.m">

    <VBox class="sapUiSmallMargin">
        <!--                    TODO add ids-->
        <f:Form id="FormEdit480_121205"
                editable="true">

            <f:layout>
                <f:ResponsiveGridLayout
                        labelSpanXL="3"
                        labelSpanL="3"
                        labelSpanM="3"
                        labelSpanS="12"
                        adjustLabelSpan="false"
                        emptySpanXL="4"
                        emptySpanL="4"
                        emptySpanM="4"
                        emptySpanS="0"
                        columnsXL="1"
                        columnsL="1"
                        columnsM="1"
                        singleContainerFullSize="true"/>
            </f:layout>
            <!--enabled="false"-->
            <!--            editable="true"-->

            <f:formContainers>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement label="Name">
                            <f:fields>
                                <Input value="{apisettings>/calledObject/graphql/playground/tabs/NEAREST_ADDRESSES/name}"
                                       required="true"
                                       editable="{configuration>/isInputEnabled}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Query">
                            <f:fields>
                                <Input value="{apisettings>/calledObject/graphql/playground/tabs/NEAREST_ADDRESSES/query}"
                                       required="true"
                                       editable="{configuration>/isInputEnabled}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="longitude">
                            <f:fields>
                                <Input value="{apisettings>/calledObject/graphql/playground/tabs/NEAREST_ADDRESSES/variables/longitude}"
                                       required="true"
                                       editable="{configuration>/isInputEnabled}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="latitude">
                            <f:fields>
                                <Input value="{apisettings>/calledObject/graphql/playground/tabs/NEAREST_ADDRESSES/variables/latitude}"
                                       required="true"
                                       editable="{configuration>/isInputEnabled}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="latitude">
                            <f:fields>
                                <Input value="{apisettings>/calledObject/graphql/playground/tabs/NEAREST_ADDRESSES/variables/radiusInKilometers}"
                                       required="true"
                                       editable="{configuration>/isInputEnabled}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="latitude">
                            <f:fields>
                                <Input value="{apisettings>/calledObject/graphql/playground/tabs/NEAREST_ADDRESSES/variables/language}"
                                       required="true"
                                       editable="{configuration>/isInputEnabled}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="maxResults">
                            <f:fields>
                                <Input value="{apisettings>/calledObject/graphql/playground/tabs/NEAREST_ADDRESSES/maxResults}"
                                       required="true"
                                       editable="{configuration>/isInputEnabled}"/>
                            </f:fields>
                        </f:FormElement>
                        <!--TODO is list-->
                        <!-- <f:FormElement label="layers">
                             <f:fields>
                                 <Input value="{apisettings>/calledObject/graphql/playground/tabs/NEAREST_ADDRESSES/layers}"       required="true"
                                       editable="{configuration>/isInputEnabled}"/>
                             </f:fields>
                         </f:FormElement>-->
                    </f:formElements>
                </f:FormContainer>
            </f:formContainers>
        </f:Form>
    </VBox>
</core:FragmentDefinition>
