<core:FragmentDefinition
        xmlns:core="sap.ui.core"
        xmlns:f="sap.ui.layout.form"
        xmlns="sap.m">

    <VBox class="sapUiSmallMargin">
        <f:Form id="FormEdit480_121205"
                editable="true">

            <f:layout>
                <f:ResponsiveGridLayout
                        labelSpanXL="3"
                        labelSpanL="3"
                        labelSpanM="3"
                        labelSpanS="12"
                        adjustLabelSpan="false"
                        emptySpanXL="4"
                        emptySpanL="4"
                        emptySpanM="4"
                        emptySpanS="0"
                        columnsXL="1"
                        columnsL="1"
                        columnsM="1"
                        singleContainerFullSize="true"/>
            </f:layout>
            <f:formContainers>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement label="{i18n>name}">
                            <f:fields>
                                <Input value="{apisettings>/graphql/playground/tabs/NEAREST_ADDRESSES/name}"
                                       required="true"
                                       editable="{configuration>/input/isNearestAdressesInputEnabled}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>query}">
                            <f:fields>
                                <Input value="{apisettings>/graphql/playground/tabs/NEAREST_ADDRESSES/query}"
                                       required="true"
                                       editable="{configuration>/input/isNearestAdressesInputEnabled}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>longitude}">
                            <f:fields>
                                <Input value="{apisettings>/graphql/playground/tabs/NEAREST_ADDRESSES/variables/longitude}"
                                       required="true"
                                       editable="{configuration>/input/isNearestAdressesInputEnabled}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>latitude}">
                            <f:fields>
                                <Input value="{apisettings>/graphql/playground/tabs/NEAREST_ADDRESSES/variables/latitude}"
                                       required="true"
                                       editable="{configuration>/input/isNearestAdressesInputEnabled}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>NearestAdress.radiusInKilometers}">
                            <f:fields>
                                <Input value="{apisettings>/graphql/playground/tabs/NEAREST_ADDRESSES/variables/radiusInKilometers}"
                                       required="true"
                                       editable="{configuration>/input/isNearestAdressesInputEnabled}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>latitude}">
                            <f:fields>
                                <Input value="{apisettings>/graphql/playground/tabs/NEAREST_ADDRESSES/variables/language}"
                                       required="true"
                                       editable="{configuration>/input/isNearestAdressesInputEnabled}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>maxResults}">
                            <f:fields>
                                <Input value="{apisettings>/graphql/playground/tabs/NEAREST_ADDRESSES/maxResults}"
                                       required="true"
                                       editable="{configuration>/input/isNearestAdressesInputEnabled}"/>
                            </f:fields>
                        </f:FormElement>
                        <!--cannot access values without key for now-->
                        <!--<f:FormElement label="{i18n>layers}">
                            <f:fields>
                                <Input value="{apisettings>/graphql/playground/tabs/NEAREST_ADDRESSES/layers}"
                                       required="true"
                                       editable="{configuration>/input/isNearestAdressesInputEnabled}"/>
                            </f:fields>
                        </f:FormElement>-->
                    </f:formElements>
                </f:FormContainer>
            </f:formContainers>
        </f:Form>
    </VBox>
</core:FragmentDefinition>
