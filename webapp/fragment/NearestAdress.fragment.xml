<core:FragmentDefinition
        xmlns:core="sap.ui.core"
        xmlns:f="sap.ui.layout.form"
        xmlns="sap.m">

    <VBox class="sapUiSmallMargin">
        <f:Form id="FormEdit480_121205"
                editable="true">

            <f:layout>
                <f:ResponsiveGridLayout
                        labelSpanXL="3"
                        labelSpanL="3"
                        labelSpanM="3"
                        labelSpanS="12"
                        adjustLabelSpan="false"
                        emptySpanXL="4"
                        emptySpanL="4"
                        emptySpanM="4"
                        emptySpanS="0"
                        columnsXL="1"
                        columnsL="1"
                        columnsM="1"
                        singleContainerFullSize="true"/>
            </f:layout>
            <f:formContainers>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement label="Name">
                            <f:fields>
                                <Input value="{apisettings>/graphql/playground/tabs/NEAREST_ADDRESSES/name}"
                                       required="true"
                                       editable="{configuration>/input/isNearestAdressesInputEnabled}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Query">
                            <f:fields>
                                <Input value="{apisettings>/graphql/playground/tabs/NEAREST_ADDRESSES/query}"
                                       required="true"
                                       editable="{configuration>/input/isNearestAdressesInputEnabled}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="longitude">
                            <f:fields>
                                <MaskInput mask="CCCC.C"
                                           placeholderSymbol="_"
                                           value="{apisettings>/graphql/playground/tabs/NEAREST_ADDRESSES/variables/longitude}"
                                           required="true"
                                           editable="{configuration>/input/isJourneySubscriptionInputEnabled}">
                                    <rules>
                                        <MaskInputRule maskFormatSymbol="C" regex="[0-9 --]"/>
                                    </rules>
                                </MaskInput>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="latitude">
                            <f:fields>
                                <MaskInput mask="CCC.C"
                                           placeholderSymbol="_"
                                           value="{apisettings>/graphql/playground/tabs/NEAREST_ADDRESSES/variables/latitude}"
                                           required="true"
                                           editable="{configuration>/input/isJourneySubscriptionInputEnabled}">
                                    <rules>
                                        <MaskInputRule maskFormatSymbol="C" regex="[0-9 --]"/>
                                    </rules>
                                </MaskInput>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="radiusInKilometers">
                            <f:fields>
                                <MaskInput mask="C.C"
                                           placeholderSymbol="_"
                                           value="{apisettings>/graphql/playground/tabs/NEAREST_ADDRESSES/variables/radiusInKilometers}"
                                           required="true"
                                           editable="{configuration>/input/isJourneySubscriptionInputEnabled}">
                                    <rules>
                                        <MaskInputRule maskFormatSymbol="C" regex="[0-5]"/>
                                    </rules>
                                </MaskInput>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="language">
                            <f:fields>
                                <MaskInput mask="CC"
                                           placeholderSymbol="_"
                                           value="{apisettings>/graphql/playground/tabs/NEAREST_ADDRESSES/variables/language}"
                                           required="true"
                                           editable="{configuration>/input/isJourneySubscriptionInputEnabled}">
                                    <rules>
                                        <MaskInputRule maskFormatSymbol="C" regex="[a-z]"/>
                                    </rules>
                                </MaskInput>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="maxResults">
                            <f:fields>
                                <Slider value="{apisettings>/graphql/playground/tabs/NEAREST_ADDRESSES/maxResults}"
                                        width="100%"
                                        min="1" max="15"
                                        showAdvancedTooltip="true"
                                        showHandleTooltip="false"
                                        inputsAsTooltips="true"
                                        enableTickmarks="true"
                                        class="sapUiMediumMarginBottom"
                                        enabled="{configuration>/input/isJourneySubscriptionInputEnabled}"/>
                            </f:fields>
                        </f:FormElement>
                        <!--cannot access values without key for now-->
                        <!--<f:FormElement label="layers">
                            <f:fields>
                                <Input value="{apisettings>/graphql/playground/tabs/NEAREST_ADDRESSES/layers}"
                                       required="true"
                                       editable="{configuration>/input/isNearestAdressesInputEnabled}"/>
                            </f:fields>
                        </f:FormElement>-->
                    </f:formElements>
                </f:FormContainer>
            </f:formContainers>
        </f:Form>
    </VBox>
</core:FragmentDefinition>
