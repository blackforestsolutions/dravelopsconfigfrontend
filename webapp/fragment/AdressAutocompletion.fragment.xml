<core:FragmentDefinition
        xmlns:core="sap.ui.core"
        xmlns:f="sap.ui.layout.form"
        xmlns="sap.m">

    <VBox class="sapUiSmallMargin">
        <f:Form id="FormEdit480_121204"
                editable="true">
            <f:layout>
                <f:ResponsiveGridLayout
                        labelSpanXL="3"
                        labelSpanL="3"
                        labelSpanM="3"
                        labelSpanS="12"
                        adjustLabelSpan="false"
                        emptySpanXL="4"
                        emptySpanL="4"
                        emptySpanM="4"
                        emptySpanS="0"
                        columnsXL="1"
                        columnsL="1"
                        columnsM="1"
                        singleContainerFullSize="true"/>
            </f:layout>
            <f:formContainers>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement label="Name">
                            <f:fields>
                                <Input value="{apisettings>/graphql/playground/tabs/ADDRESS_AUTOCOMPLETION/name}"
                                       required="true"
                                       editable="{configuration>/input/isAdressAutocompletionInputEnabled}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="text">
                            <f:fields>
                                <Input value="{apisettings>/graphql/playground/tabs/ADDRESS_AUTOCOMPLETION/variables/text}"
                                       required="true"
                                       editable="{configuration>/input/isAdressAutocompletionInputEnabled}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="language">
                            <f:fields>
                                <MaskInput mask="CC"
                                    placeholderSymbol="_"
                                    value="{apisettings>/graphql/playground/tabs/ADDRESS_AUTOCOMPLETION/variables/language}"
                                    required="true"
                                    editable="{configuration>/input/isAdressAutocompletionInputEnabled}">
                                    <rules>
                                        <MaskInputRule maskFormatSymbol="C" regex="[a-z]"/>
                                    </rules>
                                </MaskInput>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="maxResults">
                            <f:fields>
                                <Slider value="{apisettings>/graphql/playground/tabs/ADDRESS_AUTOCOMPLETION/maxResults}"
                                        width="100%"
                                        min="1" max="15"
                                        showAdvancedTooltip="true"
                                        showHandleTooltip="false"
                                        inputsAsTooltips="true"
                                        enableTickmarks="true"
                                        class="sapUiMediumMarginBottom"
                                        enabled="{configuration>/input/isAdressAutocompletionInputEnabled}"/>
                            </f:fields>
                        </f:FormElement>
