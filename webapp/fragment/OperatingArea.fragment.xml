<core:FragmentDefinition
        xmlns:core="sap.ui.core"
        xmlns:f="sap.ui.layout.form"
        xmlns="sap.m">
    <VBox class="sapUiSmallMargin">
        <f:Form id="FormEdit480_121208"
                editable="true">

            <f:layout>
                <f:ResponsiveGridLayout
                        labelSpanXL="3"
                        labelSpanL="3"
                        labelSpanM="3"
                        labelSpanS="12"
                        adjustLabelSpan="false"
                        emptySpanXL="4"
                        emptySpanL="4"
                        emptySpanM="4"
                        emptySpanS="0"
                        columnsXL="1"
                        columnsL="1"
                        columnsM="1"
                        singleContainerFullSize="true"/>
            </f:layout>
            <f:formContainers>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement label="Name">
                            <f:fields>
                                <Input value="{apisettings>/calledObject/graphql/playground/tabs/OPERATING_AREA/name}"
                                       required="true"
                                       editable="{configuration>/input/isOperatingAreaInputEnabled}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="Query">
                            <f:fields>
                                <Input value="{apisettings>/calledObject/graphql/playground/tabs/OPERATING_AREA/query}"
                                       required="true"
                                       editable="{configuration>/input/isOperatingAreaInputEnabled}"/>
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="bufferInMetres">
                            <f:fields>
                                <Input value="{apisettings>/calledObject/graphql/playground/tabs/OPERATING_AREA/bufferInMetres}"
                                       required="true"
                                       editable="{configuration>/input/isOperatingAreaInputEnabled}"/>
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>
            </f:formContainers>
        </f:Form>
    </VBox>
</core:FragmentDefinition>
