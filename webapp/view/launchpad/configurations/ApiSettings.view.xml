            <VBox class="sapUiSmallMargin">
                <f:Form id="FormDisplay480_12120"
                        editable="false">
                    <f:title>
                        <core:Title text="View"/>
                    </f:title>
                    <f:layout>
                        <f:ResponsiveGridLayout
                                labelSpanXL="4"
                                labelSpanL="4"
                                labelSpanM="12"
                                labelSpanS="12"
                                adjustLabelSpan="false"
                                emptySpanXL="0"
                                emptySpanL="0"
                                emptySpanM="0"
                                emptySpanS="0"
                                columnsXL="2"
                                columnsL="2"
                                columnsM="1"
                                singleContainerFullSize="false"/>
                    </f:layout>
                    <!--                    TODO add ids-->

                    <f:formContainers>
                        <f:FormContainer title="General">
                            <f:formElements>
                                <f:FormElement label="{i18n>page-title}">
                                    <f:fields>
                                        <Text text="{apisettings>/graphql/playground/page-title}"
                                              id="playgroundPageTitle"/>
                                    </f:fields>
                                </f:FormElement>
                            </f:formElements>
                        </f:FormContainer>
                        <f:FormContainer title="{i18n>editor}">
                            <f:formElements>
                                <f:FormElement label="Theme">
                                    <f:fields>
                                        <Text text="{apisettings>/graphql/playground/settings/editor/theme}"/>
                                    </f:fields>
                                </f:FormElement>
                            </f:formElements>
                        </f:FormContainer>
                    </f:formContainers>
                </f:Form>
                <f:Form id="FormDisplay480_12120-2"
                        editable="false">
                    <f:title>
                        <core:Title text="JOURNEY_QUERY"/>
                    </f:title>
                    <f:layout>
                        <f:ResponsiveGridLayout
                                labelSpanXL="4"
                                labelSpanL="4"
                                labelSpanM="12"
                                labelSpanS="12"
                                adjustLabelSpan="false"
                                emptySpanXL="0"
                                emptySpanL="0"
                                emptySpanM="0"
                                emptySpanS="0"
                                columnsXL="2"
                                columnsL="2"
                                columnsM="1"
                                singleContainerFullSize="false"/>
                    </f:layout>
                    <f:formContainers>
                        <f:FormContainer title="General">
                            <f:formElements>
                                <f:FormElement label="Name">
                                    <f:fields>
                                        <Text text="{apisettings>/graphql/playground/tabs/JOURNEY_QUERY/name}"/>
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="Query">
                                    <f:fields>
                                        <Text text="{apisettings>/graphql/playground/tabs/JOURNEY_QUERY/query}"/>
                                    </f:fields>
                                </f:FormElement>
                            </f:formElements>
                        </f:FormContainer>
                        <f:FormContainer title="Variables">
                            <f:formElements>
                                <f:FormElement label="departureLatitude">
                                    <f:fields>
                                        <Text text="{apisettings>/graphql/playground/tabs/JOURNEY_QUERY/variables/departureLatitude}"/>
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="departureLongitude">
                                    <f:fields>
                                        <Text text="{apisettings>/graphql/playground/tabs/JOURNEY_QUERY/variables/departureLongitude}"/>
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="arrivalLatitude">
                                    <f:fields>
                                        <Text text="{apisettings>/graphql/playground/tabs/JOURNEY_QUERY/variables/arrivalLatitude}"/>
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="arrivalLongitude">
                                    <f:fields>
                                        <Text text="{apisettings>/graphql/playground/tabs/JOURNEY_QUERY/variables/arrivalLongitude}"/>
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="dateTime">
                                    <f:fields>
                                        <Text text="{apisettings>/graphql/playground/tabs/JOURNEY_QUERY/variables/dateTime}"/>
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="isArrivalDateTime">
                                    <f:fields>
                                        <Text text="{apisettings>/graphql/playground/tabs/JOURNEY_QUERY/variables/isArrivalDateTime}"/>
                                    </f:fields>
                                </f:FormElement>
                                <f:FormElement label="language">
                                    <f:fields>
                                        <Text text="{apisettings>/graphql/playground/tabs/JOURNEY_QUERY/variables/language}"/>
                                    </f:fields>
                                </f:FormElement>
                            </f:formElements>
                        </f:FormContainer>
