<mvc:View
        controllerName="de.blackforestsolutions.dravelopsconfigfrontend.controller.launchpad.configurations.ApiSettings"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m"
        xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
        xmlns:core="sap.ui.core"
>
    <Page>
        <mvc:XMLView viewName="de.blackforestsolutions.dravelopsconfigfrontend.view.shared.Logotoolbar" async="true"/>

        <SplitContainer id="SplitAppDemo"
                        defaultTransitionNameDetail="show"
                        initialDetail="detail"
                        initialMaster="master"
        >
            <detailPages>
                <Page id="general"
                      title="General"
                      backgroundDesign="{configuration>/page/backgroundDesign}"
                      showFooter="true"
                      class="sapUiResponsivePadding--header sapUiResponsivePadding--content sapUiResponsivePadding--footer sapUiResponsivePadding--floatingFooter">
                    <content>
                        <core:Fragment fragmentName="de.blackforestsolutions.dravelopsconfigfrontend.fragment.General"
                                       type="XML"/>
                    </content>
                    <footer>
                        <OverflowToolbar>
                            <ToolbarSpacer/>
                            <Button id="editGeneral" text="Edit" press="handleEditPress"/>
                            <Button id="saveGeneral" text="Save" type="Emphasized" visible="false"
                                    press="handleSavePress"/>
                            <Button id="cancelGeneral" text="Cancel" visible="false" press="handleCancelPress"/>
                        </OverflowToolbar>
                    </footer>
                </Page>
                <Page id="JOURNEY_QUERY"
                      title="JOURNEY_QUERY"
                      backgroundDesign="{configuration>/page/backgroundDesign}"
                >
                    <content>
                        <core:Fragment
                                fragmentName="de.blackforestsolutions.dravelopsconfigfrontend.fragment.JourneyQuery"
                                type="XML"/>
                    </content>
                    <footer>
                        <OverflowToolbar>
                            <ToolbarSpacer/>
                            <Button id="editJourneyQuery" text="Edit" press="handleEditPress"/>
                            <Button id="saveJourneyQuery" text="Save" type="Emphasized" visible="false"
                                    press="handleSavePress"/>
                            <Button id="cancelJourneyQuery" text="Cancel" visible="false" press="handleCancelPress"/>
                        </OverflowToolbar>
                    </footer>
                </Page>
                <Page id="JOURNEY_SUBSCRIPTION"
                      title="JOURNEY_SUBSCRIPTION"
                      backgroundDesign="{configuration>/page/backgroundDesign}">
                    <content>
                        <core:Fragment
                                fragmentName="de.blackforestsolutions.dravelopsconfigfrontend.fragment.JourneySubscription"
                                type="XML"/>
                    </content>
                    <footer>
                        <OverflowToolbar>
                            <ToolbarSpacer/>
                            <Button id="editGeneralJourneySubsription" text="Edit" press="handleEditPress"/>
                            <Button id="saveGeneralJourneySubsription" text="Save" type="Emphasized" visible="false"
                                    press="handleSavePress"/>
                            <Button id="cancelGeneralJourneySubsription" text="Cancel" visible="false"
                                    press="handleCancelPress"/>
                        </OverflowToolbar>
                    </footer>
                </Page>
                <Page id="ADDRESS_AUTOCOMPLETION"
                      title="ADDRESS_AUTOCOMPLETION"
                      backgroundDesign="{configuration>/page/backgroundDesign}"
                >
                    <content>
                        <core:Fragment
                                fragmentName="de.blackforestsolutions.dravelopsconfigfrontend.fragment.AdressAutocompletion"
                                type="XML"/>
                    </content>
                    <footer>
                        <OverflowToolbar>
                            <ToolbarSpacer/>
                            <Button id="editAdressAutocompletion" text="Edit" press="handleEditPress"/>
                            <Button id="saveAdressAutocompletion" text="Save" type="Emphasized" visible="false"
                                    press="handleSavePress"/>
                            <Button id="cancelAdressAutocompletion" text="Cancel" visible="false"
                                    press="handleCancelPress"/>
                        </OverflowToolbar>
                    </footer>
                </Page>
                <Page id="NEAREST_ADDRESSES"
                      title="NEAREST_ADDRESSES"
                      backgroundDesign="{configuration>/page/backgroundDesign}">
                    <content>
                        <core:Fragment
                                fragmentName="de.blackforestsolutions.dravelopsconfigfrontend.fragment.NearestAdress"
                                type="XML"/>
                    </content>
                    <footer>
                        <OverflowToolbar>
                            <ToolbarSpacer/>
                            <Button id="editNearestAdresses" text="Edit" press="handleEditPress"/>
                            <Button id="saveNearestAdresses" text="Save" type="Emphasized" visible="false"
                                    press="handleSavePress"/>
                            <Button id="cancelNearestAdresses" text="Cancel" visible="false" press="handleCancelPress"/>
                        </OverflowToolbar>
                    </footer>
                </Page>
                <Page id="NEAREST_STATIONS"
                      title="NEAREST_STATIONS"
                      backgroundDesign="{configuration>/page/backgroundDesign}">
                    <content>
                        <core:Fragment
                                fragmentName="de.blackforestsolutions.dravelopsconfigfrontend.fragment.NearestStations"
                                type="XML"/>
                    </content>
                    <footer>
                        <OverflowToolbar>
                            <ToolbarSpacer/>
                            <Button id="editNearestStations" text="Edit" press="handleEditPress"/>
                            <Button id="saveNearestStations" text="Save" type="Emphasized" visible="false"
                                    press="handleSavePress"/>
                            <Button id="cancelNearestStations" text="Cancel" visible="false" press="handleCancelPress"/>
                        </OverflowToolbar>
                    </footer>
                </Page>
                <Page id="ALL_STATIONS"
                      title="ALL_STATIONS"
                      backgroundDesign="{configuration>/page/backgroundDesign}">
                    <content>
                        <core:Fragment
                                fragmentName="de.blackforestsolutions.dravelopsconfigfrontend.fragment.AllStations"
                                type="XML"/>
                    </content>
                    <footer>
                        <OverflowToolbar>
                            <ToolbarSpacer/>
                            <Button id="editAllStations" text="Edit" press="handleEditPress"/>
                            <Button id="saveAllStations" text="Save" type="Emphasized" visible="false"
                                    press="handleSavePress"/>
                            <Button id="cancelAllStations" text="Cancel" visible="false" press="handleCancelPress"/>
                        </OverflowToolbar>
                    </footer>
                </Page>
                <Page id="OPERATING_AREA"
                      title="OPERATING_AREA"
                      backgroundDesign="{configuration>/page/backgroundDesign}">
                    <content>
                        <core:Fragment
                                fragmentName="de.blackforestsolutions.dravelopsconfigfrontend.fragment.OperatingArea"
                                type="XML"/>
                    </content>
                    <footer>
                        <OverflowToolbar>
                            <ToolbarSpacer/>
                            <Button id="editOperatingArea" text="Edit" press="handleEditPress"/>
                            <Button id="saveOperatingArea" text="Save" type="Emphasized" visible="false"
                                    press="handleSavePress"/>
                            <Button id="cancelOperatingArea" text="Cancel" visible="false" press="handleCancelPress"/>
                        </OverflowToolbar>
                    </footer>
                </Page>
            </detailPages>
            <masterPages>
                <Page
                        id="master"
                        title="Configurations"
                        backgroundDesign="List" navButtonPress="onNavBack" showNavButton="true">
                    <List itemPress=".onListItemPress">
                        <StandardListItem title="General" type="Active" custom:to="general"
                                          icon="sap-icon://developer-settings" selected="true"/>
                        <StandardListItem title="JOURNEY_QUERY" type="Active" custom:to="JOURNEY_QUERY"
                                          icon="sap-icon://developer-settings"/>
                        <StandardListItem title="JOURNEY_SUBSCRIPTION" type="Active" custom:to="JOURNEY_SUBSCRIPTION"
                                          icon="sap-icon://developer-settings"/>
                        <StandardListItem title="ADDRESS_AUTOCOMPLETION" type="Active"
                                          custom:to="ADDRESS_AUTOCOMPLETION"
                                          icon="sap-icon://developer-settings"/>
                        <StandardListItem title="NEAREST_ADDRESSES" type="Active" custom:to="NEAREST_ADDRESSES"
                                          icon="sap-icon://developer-settings"/>
                        <StandardListItem title="NEAREST_STATIONS" type="Active" custom:to="NEAREST_STATIONS"
                                          icon="sap-icon://developer-settings"/>
                        <StandardListItem title="ALL_STATIONS" type="Active" custom:to="ALL_STATIONS"
                                          icon="sap-icon://developer-settings"/>
                        <StandardListItem title="OPERATING_AREA" type="Active" custom:to="OPERATING_AREA"
                                          icon="sap-icon://developer-settings"/>
                    </List>
                </Page>
            </masterPages>
        </SplitContainer>

