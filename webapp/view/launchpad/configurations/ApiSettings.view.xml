<!--the yaml can be read and edited here-->
<mvc:View
        controllerName="de.blackforestsolutions.dravelopsconfigfrontend.controller.launchpad.configurations.ApiSettings"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m"
        xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
        xmlns:core="sap.ui.core"
        xmlns:f="sap.f"
>
    <Page showHeader="true">
        <customHeader>
            <f:ShellBar
                    homeIcon="./img/corporate-logo.jpg"
                    title=""
                    homeIconPressed="onHomeIconPressed">
            </f:ShellBar>
        </customHeader>
        <SplitContainer id="SplitAppDemo"
                        defaultTransitionNameDetail="show"
                        initialDetail="detail"
                        initialMaster="master">
            <detailPages>
                <Page id="general"
                      title="{i18n>general}"
                      backgroundDesign="{configuration>/page/backgroundDesign}"
                      showFooter="true">
                    <content>
                        <core:Fragment fragmentName="de.blackforestsolutions.dravelopsconfigfrontend.fragment.General"
                                       type="XML"/>
                    </content>
                    <footer>
                        <OverflowToolbar>
                            <ToolbarSpacer/>
                            <Button id="editGeneral" text="{i18n>btn.edit}" press="handleEditPress"/>
                            <Button id="saveGeneral" text="{i18n>btn.save}" type="Emphasized" visible="false"
                                    press="handleSavePress"/>
                            <Button id="cancelGeneral" text="{i18n>btn.cancel}" visible="false"
                                    press="handleCancelPress"/>
                        </OverflowToolbar>
                    </footer>
                </Page>
                <Page id="JOURNEY_QUERY"
                      title="{i18n>JOURNEY_QUERY}"
                      backgroundDesign="{configuration>/page/backgroundDesign}"
                >
                    <content>
                        <core:Fragment
                                fragmentName="de.blackforestsolutions.dravelopsconfigfrontend.fragment.JourneyQuery"
                                type="XML"/>
                    </content>
                    <footer>
                        <OverflowToolbar>
                            <ToolbarSpacer/>
                            <Button id="editJourneyQuery" text="{i18n>btn.edit}" press="handleEditPress"/>
                            <Button id="saveJourneyQuery" text="{i18n>btn.save}" type="Emphasized" visible="false"
                                    press="handleSavePress"/>
                            <Button id="cancelJourneyQuery" text="{i18n>btn.cancel}" visible="false"
                                    press="handleCancelPress"/>
                        </OverflowToolbar>
                    </footer>
                </Page>
                <Page id="JOURNEY_SUBSCRIPTION"
                      title="{i18n>JOURNEY_SUBSCRIPTION}"
                      backgroundDesign="{configuration>/page/backgroundDesign}">
                    <content>
                        <core:Fragment
                                fragmentName="de.blackforestsolutions.dravelopsconfigfrontend.fragment.JourneySubscription"
                                type="XML"/>
                    </content>
                    <footer>
                        <OverflowToolbar>
                            <ToolbarSpacer/>
                            <Button id="editJourneySubscription" text="{i18n>btn.edit}" press="handleEditPress"/>
                            <Button id="saveJourneySubscription" text="{i18n>btn.save}" type="Emphasized"
                                    visible="false"
                                    press="handleSavePress"/>
                            <Button id="cancelJourneySubscription" text="{i18n>btn.cancel}" visible="false"
                                    press="handleCancelPress"/>
                        </OverflowToolbar>
                    </footer>
                </Page>
                <Page id="ADDRESS_AUTOCOMPLETION"
                      title="{i18n>ADDRESS_AUTOCOMPLETION}"
                      backgroundDesign="{configuration>/page/backgroundDesign}"
                >
                    <content>
                        <core:Fragment
                                fragmentName="de.blackforestsolutions.dravelopsconfigfrontend.fragment.AdressAutocompletion"
                                type="XML"/>
                    </content>
                    <footer>
                        <OverflowToolbar>
                            <ToolbarSpacer/>
                            <Button id="editAdressAutocompletion" text="{i18n>btn.edit}" press="handleEditPress"/>
                            <Button id="saveAdressAutocompletion" text="{i18n>btn.save}" type="Emphasized"
                                    visible="false"
                                    press="handleSavePress"/>
                            <Button id="cancelAdressAutocompletion" text="{i18n>btn.cancel}" visible="false"
                                    press="handleCancelPress"/>
                        </OverflowToolbar>
                    </footer>
                </Page>
                <Page id="NEAREST_ADDRESSES"
                      title="{i18n>NEAREST_ADDRESSES}"
                      backgroundDesign="{configuration>/page/backgroundDesign}">
                    <content>
                        <core:Fragment
                                fragmentName="de.blackforestsolutions.dravelopsconfigfrontend.fragment.NearestAdress"
                                type="XML"/>
                    </content>
                    <footer>
                        <OverflowToolbar>
                            <ToolbarSpacer/>
                            <Button id="editNearestAdresses" text="{i18n>btn.edit}" press="handleEditPress"/>
                            <Button id="saveNearestAdresses" text="{i18n>btn.save}" type="Emphasized" visible="false"
                                    press="handleSavePress"/>
                            <Button id="cancelNearestAdresses" text="{i18n>btn.cancel}" visible="false"
                                    press="handleCancelPress"/>
                        </OverflowToolbar>
                    </footer>
                </Page>
                <Page id="NEAREST_STATIONS"
                      title="{i18n>NEAREST_STATIONS}"
                      backgroundDesign="{configuration>/page/backgroundDesign}">
                    <content>
                        <core:Fragment
                                fragmentName="de.blackforestsolutions.dravelopsconfigfrontend.fragment.NearestStations"
                                type="XML"/>
                    </content>
                    <footer>
                        <OverflowToolbar>
                            <ToolbarSpacer/>
                            <Button id="editNearestStations" text="{i18n>btn.edit}" press="handleEditPress"/>
                            <Button id="saveNearestStations" text="{i18n>btn.save}" type="Emphasized" visible="false"
                                    press="handleSavePress"/>
                            <Button id="cancelNearestStations" text="{i18n>btn.cancel}" visible="false"
                                    press="handleCancelPress"/>
                        </OverflowToolbar>
                    </footer>
                </Page>
                <Page id="ALL_STATIONS"
                      title="{i18n>ALL_STATIONS}"
                      backgroundDesign="{configuration>/page/backgroundDesign}">
                    <content>
                        <core:Fragment
                                fragmentName="de.blackforestsolutions.dravelopsconfigfrontend.fragment.AllStations"
                                type="XML"/>
                    </content>
                    <footer>
                        <OverflowToolbar>
                            <ToolbarSpacer/>
                            <Button id="editAllStations" text="{i18n>btn.edit}" press="handleEditPress"/>
                            <Button id="saveAllStations" text="{i18n>btn.save}" type="Emphasized" visible="false"
                                    press="handleSavePress"/>
                            <Button id="cancelAllStations" text="{i18n>btn.cancel}" visible="false"
                                    press="handleCancelPress"/>
                        </OverflowToolbar>
                    </footer>
                </Page>
                <Page id="OPERATING_AREA"
                      title="{i18n>OPERATING_AREA}"
                      backgroundDesign="{configuration>/page/backgroundDesign}">
                    <content>
                        <core:Fragment
                                fragmentName="de.blackforestsolutions.dravelopsconfigfrontend.fragment.OperatingArea"
                                type="XML"/>
                    </content>
                    <footer>
                        <OverflowToolbar>
                            <ToolbarSpacer/>
                            <Button id="editOperatingArea" text="{i18n>btn.edit}" press="handleEditPress"/>
                            <Button id="saveOperatingArea" text="{i18n>btn.save}" type="Emphasized" visible="false"
                                    press="handleSavePress"/>
                            <Button id="cancelOperatingArea" text="{i18n>btn.cancel}" visible="false"
                                    press="handleCancelPress"/>
                        </OverflowToolbar>
                    </footer>
                </Page>
            </detailPages>
            <masterPages>
                <Page
                        id="master"
                        title="Configurations"
                        backgroundDesign="List" navButtonPress="onNavBack" showNavButton="true">
                    <List id="configurationTabs" itemPress=".onListItemPress" mode="SingleSelectMaster"
                          includeItemInSelection="true">
                        <StandardListItem id="generalTab"
                                          title="{i18n>general}" type="Active" custom:to="general"
                                          icon="sap-icon://developer-settings"
                                          iconInset="false" selected="true"/>
                        <StandardListItem id="journeyQueryTab"
                                          title="{i18n>JOURNEY_QUERY}" type="Active" custom:to="JOURNEY_QUERY"
                                          icon="sap-icon://developer-settings" iconInset="false"/>
                        <StandardListItem id="journeySubscriptionTab"
                                          title="{i18n>JOURNEY_SUBSCRIPTION}" type="Active"
                                          custom:to="JOURNEY_SUBSCRIPTION"
                                          icon="sap-icon://developer-settings" iconInset="false"/>
                        <StandardListItem id="AadressAutocompletionTab"
                                          title="{i18n>ADDRESS_AUTOCOMPLETION}" type="Active"
                                          custom:to="ADDRESS_AUTOCOMPLETION"
                                          icon="sap-icon://developer-settings" iconInset="false"/>
                        <StandardListItem id="nearestAdressesTab"
                                          title="{i18n>NEAREST_ADDRESSES}" type="Active" custom:to="NEAREST_ADDRESSES"
                                          icon="sap-icon://developer-settings" iconInset="false"/>
                        <StandardListItem id="nearestStationsTab"
                                          title="{i18n>NEAREST_STATIONS}" type="Active" custom:to="NEAREST_STATIONS"
                                          icon="sap-icon://developer-settings" iconInset="false"/>
                        <StandardListItem id="allStationsTab"
                                          title="{i18n>ALL_STATIONS}" type="Active" custom:to="ALL_STATIONS"
                                          icon="sap-icon://developer-settings" iconInset="false"/>
                        <StandardListItem id="operatingAreaTab"
                                          title="{i18n>OPERATING_AREA}" type="Active" custom:to="OPERATING_AREA"
                                          icon="sap-icon://developer-settings" iconInset="false"/>
                    </List>
                    <footer>
                        <Toolbar/>
                    </footer>
                </Page>
            </masterPages>
        </SplitContainer>
    </Page>
</mvc:View>
