<!--the yaml can be read and edited here-->

<mvc:View
        controllerName="de.blackforestsolutions.dravelopsconfigfrontend.controller.launchpad.configurations.ApiSettings"
        xmlns:core="sap.ui.core"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m"
>
    <mvc:XMLView viewName="de.blackforestsolutions.dravelopsconfigfrontend.view.shared.Logotoolbar" async="true"/>

    <Page
            id="page"
            showNavButton="true"
            navButtonPress="onNavBack" title="{i18n>ApiSettingsTile}"
            showHeader="true"
            class="sapUiResponsivePadding--header sapUiResponsivePadding--content sapUiResponsivePadding--footer sapUiResponsivePadding--floatingFooter">

        <content>
            <core:Fragment
                    fragmentName="de.blackforestsolutions.dravelopsconfigfrontend.view.launchpad.configurations.FormApiSettingsForm"
                    async="true"/>
        </content>

        <headerContent>
            <Button id="edit" text="Edit" press="handleEditPress"/>
            <Button id="save" text="Save" type="Emphasized" visible="false" press="handleSavePress"/>
            <Button id="cancel" text="Cancel" visible="false" press="handleCancelPress"/>
        </headerContent>
    </Page>

</mvc:View>
